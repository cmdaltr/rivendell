# Rivendell Environment Configuration

# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Web Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://rivendell:rivendell@postgres:5432/rivendell

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Paths
EVIDENCE_DIR=/evidence
OUTPUT_DIR=/output
DATA_DIR=/data

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY=your-api-key-here

# SIEM Configuration

## Splunk (latest version: 9.x)
SPLUNK_ENABLED=false
SPLUNK_HOST=localhost
SPLUNK_PORT=8088
SPLUNK_HEC_TOKEN=your-hec-token-here
SPLUNK_INDEX=rivendell
SPLUNK_SOURCETYPE=rivendell:forensics
SPLUNK_SSL_VERIFY=true
# Authentication
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=changeme
# API Configuration
SPLUNK_API_PORT=8089
SPLUNK_SCHEME=https

## Elasticsearch (latest version: 8.x)
ELASTIC_ENABLED=false
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTIC_SCHEME=https
ELASTIC_INDEX=rivendell-forensics
ELASTIC_SSL_VERIFY=true
# Authentication (required for Elasticsearch 8.x+)
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=changeme
# API Key Authentication (alternative to username/password)
ELASTIC_API_KEY=your-api-key-here
# Certificate verification
ELASTIC_CA_CERT=/path/to/ca.crt
ELASTIC_CLIENT_CERT=/path/to/client.crt
ELASTIC_CLIENT_KEY=/path/to/client.key

## Kibana (optional, for dashboard management)
KIBANA_ENABLED=false
KIBANA_HOST=localhost
KIBANA_PORT=5601
KIBANA_USERNAME=elastic
KIBANA_PASSWORD=changeme

# Acquisition Settings
ACQUISITION_ENCRYPTION_DEFAULT=Password
ACQUISITION_OUTPUT_DIR=/tmp/gandalf/acquisitions
ACQUISITION_MEMORY_ENABLED=false

# Analysis Settings
ANALYSIS_BRISK_MODE=false
ANALYSIS_YARA_RULES=/opt/yara-rules
ANALYSIS_KEYWORDS=/opt/keywords.txt
ANALYSIS_CLAM_ENABLED=false

# MITRE ATT&CK
MITRE_ATTACK_ENABLED=true
MITRE_NAVIGATOR_ENABLED=true

# Tool Paths (auto-detected if not specified)
TSK_PATH=/usr/bin
VOLATILITY_PATH=/usr/local/bin
PLASO_PATH=/usr/local/bin
YARA_PATH=/usr/bin
CLAM_PATH=/usr/bin

# Monitoring
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:changeme

# Frontend
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws
