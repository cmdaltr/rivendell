# Elrond Web Backend Configuration

# Application
APP_NAME=Elrond Web Interface
APP_VERSION=2.1.0
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# CORS - Add your frontend URL
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Storage
UPLOAD_DIR=/tmp/elrond/uploads
OUTPUT_DIR=/tmp/elrond/output
MAX_UPLOAD_SIZE=107374182400  # 100GB

# Session
SECRET_KEY=your-secret-key-change-in-production
SESSION_TIMEOUT=3600

# Analysis
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT=86400  # 24 hours

# Allowed paths for file browsing (comma-separated)
ALLOWED_PATHS=["/mnt", "/media", "/tmp/elrond"]
